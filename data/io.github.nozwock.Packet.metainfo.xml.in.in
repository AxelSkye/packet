<?xml version="1.0" encoding="UTF-8"?>
<!-- nozwock 2019 <> -->
<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>Packet</name>
  <summary>Share files easily</summary>
  <description>
    <p>Send and receive files wirelessly with Android devices using Quick Share or another device with Packet installed.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://github.com/nozwock/packet/blob/main/data/resources/screenshots/packet-main.png?raw=true</image>
      <caption>Home Page</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/nozwock/packet/blob/main/data/resources/screenshots/packet-receive.png?raw=true</image>
      <caption>Received Share Request</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/nozwock/packet/blob/main/data/resources/screenshots/packet-send.png?raw=true</image>
      <caption>Sent Share Request</caption>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/nozwock/packet</url>
  <url type="bugtracker">https://github.com/nozwock/packet/issues</url>
  <url type="vcs-browser">https://github.com/nozwock/packet</url>
  <!-- Translation repository -->
  <url type="translate">https://github.com/nozwock/packet/tree/main/po</url>
  <!-- Open Age Ratings Service:
       https://hughsie.github.io/oars/generate.html
  -->
  <content_rating type="oars-1.1" />
  <releases>
    <!-- FIXME Set release date -->
    <release version="0.1.0" date="2019-07-11" />
  </releases>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <!-- <developer_name translate="no">nozwock</developer_name> -->
  <!-- Introduced with Appstream 1.0, but not yet fully supported by corresponding projects -->
  <developer id="io.github">
    <name translate="no">nozwock</name>
  </developer>
  <!--
    Branding colors:
    https://docs.flathub.org/docs/for-app-authors/metainfo-guidelines/#brand-color
  -->
  <branding>
    <color type="primary" scheme_preference="light">#8ff0a4</color>
    <color type="primary" scheme_preference="dark">#26a269</color>
  </branding>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <translation type="gettext">@gettext-package@</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
</component>
