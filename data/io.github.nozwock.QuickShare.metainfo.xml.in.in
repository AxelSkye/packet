<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>QuickShare</name>
  <summary>Android's NearbyShare/QuickShare for Linux</summary>
  <description>
    <p>An implementation of Android's NearbyShare/QuickShare for Linux with a GTK4 interface.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <!-- FIXME Set the project git url and replace the screenshot -->
      <image>https://github.com/nozwock/quickshare-gtk/blob/main/data/resources/screenshots/screenshot1.png?raw=true</image>
      <caption>Main window</caption>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/nozwock/quickshare-gtk</url>
  <url type="bugtracker">https://github.com/nozwock/quickshare-gtk/issues</url>
  <url type="vcs-browser">https://github.com/nozwock/quickshare-gtk</url>
  <!-- Translation repository -->
  <url type="translate">https://github.com/nozwock/quickshare-gtk/tree/main/po</url>
  <!-- Open Age Ratings Service:
       https://hughsie.github.io/oars/generate.html
  -->
  <content_rating type="oars-1.1" />
  <releases>
    <!-- FIXME Set release date -->
    <release version="0.1.0" date="2019-07-11" />
  </releases>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <!-- <developer_name translate="no">nozwock</developer_name> -->
  <!-- Introduced with Appstream 1.0, but not yet fully supported by corresponding projects -->
  <developer id="io.github">
    <name translate="no">nozwock</name>
  </developer>
  <!--
    Branding colors:
    https://docs.flathub.org/docs/for-app-authors/metainfo-guidelines/#brand-color
  -->
  <branding>
    <color type="primary" scheme_preference="light">#af7faf</color>
    <color type="primary" scheme_preference="dark">#a599a5</color>
  </branding>
  <translation type="gettext">@gettext-package@</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
</component>
